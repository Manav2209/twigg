generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id         String    @id @default(cuid())
  email      String    @unique
  username       String?
  password   String

  
  stocks      Stock[]
  mutualFunds MutualFund[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

}
model Stock {
  id            String  @id @default(cuid())
  symbol        String

  shares        Int
  purchasePrice Float
  currentPrice  Float
  userId        String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("stocks")
}

model MutualFund {
  id           String  @id @default(cuid())
  symbol       String
  fund         String
  units        Int
  nav          Float   // Net Asset Value (purchase price)
  currentPrice Float
  userId       String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("mutual_funds")
}
